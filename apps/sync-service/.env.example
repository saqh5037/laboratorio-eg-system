# ============================================
# LABSIS - Base de Datos del Laboratorio
# ============================================
LABSIS_HOST=localhost
LABSIS_PORT=5432
LABSIS_DB=labsisEG
LABSIS_USER=postgres
LABSIS_PASSWORD=

# ============================================
# CONFIGURACIÓN DE SINCRONIZACIÓN
# ============================================
# Lista de precios: 27 = "Ambulatorio_Abril_2025" (USD)
LISTA_PRECIOS_ID=27

# Tiempo de espera antes de sincronizar (milisegundos)
DEBOUNCE_MS=2000

# Rutas de salida
OUTPUT_PATH=./output
OUTPUT_FILENAME=precios.json

# Auto-copiar a proyecto web (true/false)
AUTO_COPY_TO_WEB=true
WEB_PROJECT_PATH=/Users/samuelquiroz/Documents/proyectos/Test-Directory-EG/laboratorio-eg/public/data

# ============================================
# SERVIDOR HTTP
# ============================================
HTTP_PORT=3001

# ============================================
# PANEL DE ADMINISTRACIÓN
# ============================================
# JWT para autenticación
JWT_SECRET=cambiar_en_produccion_por_string_aleatorio_largo

# Usuario admin (crear con: npm run create-admin)
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=

# ============================================
# APLICACIÓN
# ============================================
NODE_ENV=development
LOG_LEVEL=info

# ============================================
# NOTAS
# ============================================
# - La base de datos labsisEG contiene:
#   * 369 pruebas individuales activas
#   * 173 grupos de pruebas activos
#   * Total: 542 estudios en lista ID 27
#
# - NO se usa AWS S3 en desarrollo local
# - El JSON se genera en ./output/precios.json
# - Se sirve vía HTTP en http://localhost:3001/api/precios.json
