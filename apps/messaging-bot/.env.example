# ============================================
# MESSAGING BOT SERVICE - Environment Variables
# ============================================
# Copy this file to .env and fill in your values

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=3004
NODE_ENV=development
LOG_LEVEL=info

# ============================================
# DATABASE (PostgreSQL labsisEG)
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=labsisEG
DB_USER=labsis
DB_PASSWORD=labsis
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# ============================================
# TELEGRAM BOT CONFIGURATION
# ============================================
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_ENABLED=true

# Webhook URL for production (leave empty for polling in dev)
TELEGRAM_WEBHOOK_URL=

# ============================================
# WHATSAPP BOT CONFIGURATION (Future)
# ============================================
# WhatsApp Cloud API credentials
WHATSAPP_ENABLED=false
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_VERIFY_TOKEN=your_webhook_verify_token
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id

# ============================================
# GEMINI AI CONFIGURATION
# ============================================
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp

# Rate Limiting for Gemini API (Free tier: 8 RPM)
GEMINI_MAX_REQUESTS_PER_MINUTE=8
GEMINI_MAX_TOKENS_PER_REQUEST=8000

# ============================================
# SECURITY
# ============================================
JWT_SECRET=messaging_bot_secret_change_in_production_2025
JWT_EXPIRATION=24h

# CORS Origins (comma-separated)
CORS_ORIGIN=http://localhost:5173,http://192.168.1.125:5173

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# CONVERSATION SETTINGS
# ============================================
# How long to keep conversation context in memory (milliseconds)
CONVERSATION_TIMEOUT_MS=600000

# Maximum message history to send to Gemini
MAX_CONTEXT_MESSAGES=10

# ============================================
# LABORATORY INFORMATION
# ============================================
LAB_NAME=Laboratorio Elizabeth Gutiérrez
LAB_ADDRESS=Calle Central, Bagaces, Guanacaste, Costa Rica
LAB_PHONE=+506 2671 0000
LAB_EMAIL=laboratorio.elizabethgutierrez@gmail.com
LAB_WEBSITE=https://laboratorio-eg.com

# Business Hours
LAB_HOURS_WEEKDAY=Lunes a Viernes: 6:00 AM - 5:00 PM
LAB_HOURS_SATURDAY=Sábado: 6:00 AM - 12:00 PM
LAB_HOURS_SUNDAY=Domingo: Cerrado

# ============================================
# FRONTEND INTEGRATION
# ============================================
FRONTEND_URL=http://localhost:5173
ADMIN_DASHBOARD_PATH=/admin/telegram

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_AI_RESPONSES=true
ENABLE_ORDER_CREATION=true
ENABLE_SUPPLY_REQUESTS=true
ENABLE_METRICS_TRACKING=true

# ============================================
# DEBUGGING
# ============================================
DEBUG_MODE=false
VERBOSE_LOGGING=false
